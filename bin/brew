#!/usr/bin/env bash

source ${DOTFILES_DIRECTORY}/bin/utils

# update homebrew, upgrade installed packages
user "updating homebrew"
brew update

# base packages
user "installing shell stuff (zsh, tmux, fzf, wget)"
brew install zsh
brew install tmux
brew install fzf
brew install the_silver_searcher
brew install wget

# editors
user "installing vim"
brew install vim

user "installing emacs"
brew tap d12frosted/emacs-plus
brew install emacs-plus
ln -s /usr/local/opt/emacs-plus/Emacs.app /Applications

# git and git-flow
user "installing git"
brew install git
brew install git-flow

# ruby
user "installing ruby"
brew install ruby

user "installing ansible"
brew install ansible

# node, yarn
user "installing node and yarn"
brew install node
brew install yarn

# GPG
user "installing gpg"
brew install gpg

# casks
user "installing iterm2"
brew cask install iterm2
user "installing fantastical"
brew cask install fantastical
user "installing spotify"
brew cask install spotify
user "installing dropbox"
brew cask install dropbox
user "installing slack"
brew cask install slack
user "installing dash"
brew cask install dash
user "installing transmit"
brew cask install transmit
user "installing keybase"
brew cask install keybase
user "installing vlc"
brew cask install vlc

# cleanup
user "cleaning up homebrew"
brew cleanup

success "all done!"
