wtf:
  colors:
    border:
      focusable: darkslateblue
      focused: orange
      normal: gray
  grid:
    columns: [32, 32, 32, 32, 90]
    rows: [10, 10, 10, 4, 4, 90]
  refreshInterval: 1
  mods:
    clocks:
      colors:
        rows:
          even: "lightblue"
          odd: "white"
      enabled: true
      locations:
        Coimbra: "Europe/Lisbon"
        New York: "America/New York"
        Austin: "America/Chicago"
        SF: "America/Los_Angeles"
      position:
        top: 0
        left: 1
        height: 1
        width: 1
      refreshInterval: 15
      sort: "natural"
      title: "World clock"
      type: "clocks"
    power:
      enabled: true
      position:
        top: 0
        left: 3
        height: 1
        width: 1
      refreshInterval: 15
      title: "Power âš¡"
    hackernews:
      title: "Hacker News"
      enabled: true
      numberOfStories: 22
      position:
        top: 1
        left: 0
        height: 3
        width: 2
      storyType: top
      refreshInterval: 900
